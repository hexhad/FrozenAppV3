<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BlankFragmentThree"
    android:background="#EAEDF4"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_dash" />

    <LinearLayout

        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="350dp"
            android:background="@drawable/main_cards_white"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_time"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/black"
                android:text="Pick Your Time"
                android:visibility="invisible"
                app:icon="@drawable/ic_time" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/already_ordered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ordered"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:weightSum="2">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_spoon_frag"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Base"
                android:textColor="#FF9800"
                android:visibility="invisible"
                app:strokeColor="#FF9800" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_mixin_frag"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Mix in"
                android:textColor="#FF9800"
                android:visibility="invisible"
                app:strokeColor="#FF9800" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_topping_frag"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Topping"
                android:textColor="#FF9800"
                android:visibility="invisible"
                app:strokeColor="#FF9800" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sauce_frag"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Sauce"
                android:textColor="#FF9800"
                android:visibility="invisible"
                app:strokeColor="#FF9800" />
        </LinearLayout>

    </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_time"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Cancel Order"
                android:visibility="invisible"
                app:icon="@drawable/cancle"
                app:iconGravity="end" />


        </LinearLayout>
    </LinearLayout>

